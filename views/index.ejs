    <!-- API Data -->
    <% if( locals.name ){ %>
        <h1 class="text-primary"> <%= name %> </h1>
        <h2> <%= title %> </h2>
        <h1> <%= vision %> </h1>
        <h1> <%= weapon %> </h1>
        <h3> <%= gender %> </h3>
        <h2> <%= nation %> </h2>
        <p> <%= affiliation %> </p>
        <h2> <%= rarity %> </h2>
